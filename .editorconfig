# Root .editorconfig file for the project
root = true

# Default settings for all files
[*]
charset = utf-8               # Use UTF-8 character encoding
end_of_line = lf              # Use Unix-style line endings
indent_style = space          # Use spaces for indentation
indent_size = 2               # Set indentation to 2 spaces
insert_final_newline = true   # Ensure files end with a newline
trim_trailing_whitespace = true # Remove trailing whitespace on save

# Settings for TypeScript files
[*.{ts,tsx,js}]
indent_size = 2               # Set indentation to 2 spaces for TypeScript

# Settings for JSON files
[*.json]
indent_size = 2               # JSON typically uses 2 spaces for indentation

# Settings for Markdown files
[*.md]
trim_trailing_whitespace = false # Allow trailing whitespace in Markdown

# Settings for YAML files
[*.yml]
indent_size = 2               # YAML typically uses 2 spaces for indentation
